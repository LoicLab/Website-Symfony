{% extends 'base.html.twig' %}
{% trans_default_domain 'cv' %}

{% block time %}
<div style="width: 10%"></div>
{% endblock time %}

{% block body %}
<div class="champ">
  <time>NÃ©e le {{createDateDeNaissance|date("d/m/Y")}}</time>
  {% if avoirPermis == true %}
    <p>Permis B</p>
  {% endif %}
</div>

<div class="mainsoustitre2">
  <h2 class="soustitre">{{'titleCompetence' |trans}}</h2>
</div>

<div class="bloc1Competence row">
  <div class="col-md-4">
    <div class="titreLangage fa fa-code"><b> Langages</b></div>
    {% for langage in langages %}
    <p class="textBloc1Langage">{{ langage.langage}}</p>
    {% endfor %}
  </div>

  <div class="col-md-4 textBdd">
    <div class="titreLangage fa fa-database"><B> {{'bdd' |trans}}</b></div>
    {% for langage in baseDeDonnees %}
    <p>{{ langage.BaseDeDonnee}}</p>
    {% endfor %}
  </div>

  <div class="col-md-4">
    <div class="titreLangage fa fa-users"><b> {{'uml' |trans}}</b></div>
    {% for langage in langageModelisation %}
    <p class="textLangageModel">{{ langage.langageModelisation}}</p>
    {% endfor %}
  </div>

</div>

<div class="mainsoustitre2">
  <h2 class="soustitre">{{'titleFormation' |trans}}</h2>
</div>

<div class="blocFormation row">
  <div class="formation col-md-6">
    {% for formation in formationsBloc1 %}
    <div class="titre3"><b>{{ formation.titre |trans }}</b></div>
    <p>{{formation.description |trans }} {{formation.dateDebut |trans }} {{formation.dateFin |trans }} {{formation.obtenue |trans }}</p>
    {% endfor %}
  </div>

  <div class="formation col-md-6">
    {% for formation in formationBloc2 %}
    <div class="titre3"><b>{{ formation.titre |trans }}</b></div>
    <p>{{formation.description |trans}} {{formation.dateDebut |trans}} {{formation.dateFin |trans}} {{formation.obtenue |trans}}</p>
    {% endfor %}
  </div>
</div>

<div class="mainsoustitre2">
  <h2 class="soustitre">{{'titleExpePro' |trans}}</h2>
</div>

<div class="blocExperience row">
  {% for Experience in ExperiencesBloc1 %}
  <div class="experience col-md-6">
    <div class="titre2" ><b>{{ Experience.poste |trans }}</b></div>
    <p class="style">{{ Experience.entreprise |trans }} {{Experience.dateDebut |trans }} {{Experience.dateFin |trans }} </p>
    <p>{{Experience.secteur |trans }}</p>
    <p>{{Experience.mission |trans }}</p>
    <br>
  </div>
  {% endfor %}

  {% for Experience in ExperiencesBloc2 %}
  <div class="experience col-md-6">
    <div class="titre2" ><b>{{ Experience.poste |trans }}</b></div>
    <p class="style">{{ Experience.entreprise |trans }} {{Experience.dateDebut |trans }} {{Experience.dateFin |trans }} </p>
    <p>{{Experience.secteur |trans }}</p>
    <p>{{Experience.mission |trans }}</p>
    <br>
  </div>
  {% endfor %}
</div>

{% endblock %}

