{% extends 'base.html.twig' %}

{% block time %}
<time class="d-none d-md-block" style="width: 10%; text-align:right">{{createDate|date("d/m/Y")}}</time>
{% endblock time %}

{% block body %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="image carousel-inner">

        <div class="carousel-item active ">
          <img class="d-block w-100 " src="{{asset('assets/images/computer.jpg')}}" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 " src="{{asset('assets/images/guitar.jpg')}}" alt="Second slide">
